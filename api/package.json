{
	"name": "express-authentication-boilerplate",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"main": "dist/src/server.js",
	"scripts": {
		"build": "tsc --noEmit && eslint . && rimraf dist && tsup",
		"dev": "nodemon",
		"start": "node dist/src/server.js",
		"format": "prettier --write .",
		"lint": "eslint .",
		"type-check": "tsc --noEmit",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:clear": "tsx src/databases/drizzle/clean.ts",
		"db:seed": "tsx src/seed/superSeeder.ts",
		"destroy": "rimraf -g \"{node_modules,.next,.cache}\"",
		"prepare": "husky"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@faker-js/faker": "^9.8.0",
		"@panva/hkdf": "^1.2.1",
		"bcrypt": "^6.0.0",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"csrf-csrf": "^4.0.2",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.43.1",
		"express": "^5.1.0",
		"express-rate-limit": "^7.5.0",
		"express-session": "^1.18.1",
		"handlebars": "^4.7.8",
		"helmet": "^8.1.0",
		"http-status-codes": "^2.3.0",
		"ip": "^2.0.1",
		"jose": "^6.0.11",
		"json-2-csv": "^5.5.9",
		"multer": "2.0.1",
		"nodemailer": "^7.0.3",
		"nodemon": "^3.1.10",
		"passport": "^0.7.0",
		"passport-custom": "^1.1.1",
		"passport-google-oauth20": "^2.0.0",
		"passport-local": "^1.0.0",
		"pg": "^8.16.0",
		"picocolors": "^1.1.1",
		"postgres": "^3.4.7",
		"sharp": "^0.34.2",
		"zod": "^3.25.30"
	},
	"devDependencies": {
		"@eslint/js": "^9.27.0",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/bcrypt": "^5.0.2",
		"@types/cookie-parser": "^1.4.8",
		"@types/cors": "^2.8.18",
		"@types/ejs": "^3.1.5",
		"@types/express": "^5.0.2",
		"@types/express-session": "^1.18.1",
		"@types/ip": "^1.1.3",
		"@types/lint-staged": "^13.3.0",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.15.21",
		"@types/nodemailer": "^6.4.17",
		"@types/passport": "^1.0.17",
		"@types/passport-google-oauth20": "^2.0.16",
		"@types/passport-jwt": "^4.0.1",
		"@types/passport-local": "^1.0.38",
		"@types/pg": "^8.15.2",
		"drizzle-kit": "^0.31.1",
		"eslint": "^9.27.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-unused-imports": "^4.1.4",
		"globals": "^16.2.0",
		"husky": "^9.1.7",
		"jiti": "^2.4.2",
		"lint-staged": "^16.0.0",
		"only-allow": "^1.2.1",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"tsup": "^8.5.0",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.1"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"**/*.{css,scss}": [
			"prettier --write"
		],
		"**/*.{json,md}": [
			"prettier --write"
		]
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"bcrypt",
			"esbuild",
			"sharp"
		]
	},
	"packageManager": "pnpm@9.6.0"
}
