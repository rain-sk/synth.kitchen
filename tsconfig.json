{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2022",
      "dom"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "cypress"
    ]
  },
  "include": [
    "cypress/**/*.ts"
  ],
  "references": [
    {
      "path": "./app/shared/tsconfig.json"
    },
    {
      "path": "./app/api/tsconfig.json"
    },
    {
      "path": "./app/web/tsconfig.json"
    }
  ]
}