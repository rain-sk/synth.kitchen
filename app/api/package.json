{
  "name": "synth.kitchen-api",
  "version": "0.5.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "scripts": {
    "dev": "concurrently -k -n ssh,server '../../ssh-tunnel.sh' 'npx tsx --env-file=.env --watch src/index.ts'",
    "build": "node --env-file=.env -r ts-node/register build.ts",
    "build:prod": "npm run build",
    "postbuild:prod": "npm run migrate",
    "start": "node ./build/index.js",
    "orm": "node --env-file=.env -r ts-node/register node_modules/typeorm/cli.js",
    "gen:migration": "npm run orm -- migration:generate -d ./src/data-source.ts ./src/migration/NewMigration",
    "migrate": "npm run orm -- migration:run -d ./src/data-source.ts"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "server-name-gen": "^1.0.2",
    "synth.kitchen-shared": "file:../shared",
    "typeorm": "0.3.25",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.0",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
