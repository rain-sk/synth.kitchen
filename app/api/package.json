{
  "name": "synth.kitchen-api",
  "version": "0.5.13",
  "description": "",
  "license": "ISC",
  "author": "",
  "scripts": {
    "build": "node --env-file=.env -r ts-node/register build.ts",
    "dev": "concurrently -k -n server,lint 'npx tsx --env-file=.env --watch src/index.ts' 'npm:lint'",
    "lint": "tsc --preserveWatchOutput --watch --noEmit",
    "start": "node ./build/index.js",
    "migrate": "npm run orm -- migration:run -d ./src/data-source.ts",
    "orm": "node --trace-warnings --env-file=.env -r ts-node/register node_modules/typeorm/cli.js",
    "migration:generate": "npm run orm -- migration:generate -d ./src/data-source.ts ./src/migration/NewMigration",
    "migration:create": "npm run orm -- migration:create ./src/migration/NewMigration",
    "build:prod": "node -r ts-node/register build.ts",
    "postbuild:prod": "npm run migrate:prod",
    "migrate:prod": "npm run orm:prod -- migration:run -d ./src/data-source.ts",
    "orm:prod": "node --trace-warnings -r ts-node/register node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "bcrypt": "6.0.0",
    "class-validator": "0.14.3",
    "cors": "2.8.5",
    "crypto-js": "4.2.0",
    "express": "5.2.1",
    "express-jwt": "8.5.1",
    "jsonwebtoken": "9.0.3",
    "nodemailer": "7.0.12",
    "pg": "8.17.1",
    "pg-hstore": "2.3.4",
    "reflect-metadata": "0.2.2",
    "server-name-gen": "1.0.2",
    "synth.kitchen-shared": "file:../shared",
    "typeorm": "0.3.28",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "6.0.0",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/node": "^24.10.1",
    "concurrently": "9.2.1",
    "esbuild": "0.27.2",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  }
}
